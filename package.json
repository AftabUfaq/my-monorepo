{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/@monorepo/shared",
      "**/@monorepo/shared/**"
    ]
  },
  "scripts": {
    "web-start": "yarn workspace react-app start",
    "web-nodeModules": "yarn workspace react-app install",
    "mobile-nodeModules": "yarn workspace myapp install",
    "mobile-start": "yarn workspace myapp start",
    "mobile-pods": "yarn workspace myapp pods",
    "mobile-ios": "yarn workspace myapp ios",
    "mobile-android": "yarn workspace myapp android",
    "shared-build": "yarn workspace @monorepo/shared build",
    "shared-nodeModules": "yarn workspace @monorepo/shared install"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.73.21",
    "@react-native/eslint-config": "0.73.2",
    "@react-native/metro-config": "0.73.5",
    "@react-native/typescript-config": "0.73.1",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0"
  }
}
